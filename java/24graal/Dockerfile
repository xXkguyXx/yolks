# From https://github.com/ccarney16/pterodactyl-images

FROM    --platform=$TARGETOS/$TARGETARCH container-registry.oracle.com/graalvm/jdk:24-ol9

LABEL   author="Karan Singh" maintainer="xxkguyxxdev@gmail.com"

LABEL   org.opencontainers.image.source="https://github.com/xXkguyXx/yolks"
LABEL   org.opencontainers.image.licenses=MIT

RUN     microdnf --enablerepo ol9_codeready_builder \
			install --assumeyes lsof curl ca-certificates openssl git tar sqlite fontconfig freetype tzdata iproute \
			&& microdnf clean all \
			&& useradd -d /home/container -m container

USER        container
ENV         USER=container HOME=/home/container
WORKDIR     /home/container

COPY    ./entrypoint.sh /entrypoint.sh
CMD     [ "/bin/bash", "/entrypoint.sh" ]